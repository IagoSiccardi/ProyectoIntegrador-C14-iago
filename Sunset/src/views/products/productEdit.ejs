<!DOCTYPE html>
<html lang="en" class="formulariosHTML">
    <%- include('../partials/head',{
        title: 'Sunset | Edit'
    }) %> 
<body>
    <%- include('../partials/header') %> 
    <main class="formularios">

        <section>
            <h2> Agregar producto</h2>
            <form method="post" enctype="multipart/form-data">
                <div>
                    <label>
                        <span>Nombre del producto</span>
                        <input type="text" name="name" autocomplete="off" >

                    </label>

                </div>
                <div>
                    <label>
                        <span>Precio del producto</span>
                        <input type="number" name="price" autocomplete="off"  >

                    </label>

                </div>
                <div>
                    <label>
                        <span>Descripction del producto</span>
                        <textarea name="description" id="" cols="65 " rows="10"></textarea>

                    </label>

                </div>
                <div>
                    <label>
                        <span>Descuento del producto</span>
                        <input type="number" name="discount" autocomplete="off"  >

                    </label>

                </div>
                
                
                
                <div>
                    <select name="coleccion" id="coleccion">
                        
    
                            <option value="" hidden selected>Eliga la coleccion</option>

                            <% collection.forEach(colecct => { %>
                                <option value="<%= colecct.id %>"><%= colecct.name %></option>
                                
                            <% }) %>
                            
                    </select>

                </div>
                
                <div>
                    <input type="file" name="imagen" id="imagen" enctype>
                </div>

                <div>
                    
                    <button class="loginButton" type="submit">Crear</button>
                </div>

                
            </form>
        </section>
        
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>