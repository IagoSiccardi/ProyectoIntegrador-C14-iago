<!DOCTYPE html>
<html lang="en" class="formulariosHTML">
    <%- include('../partials/head',{
        title: 'Sunset | Edit'
    }) %> 
<body>
    <%- include('../partials/header') %> 
    <main class="formularios">

        <section>
            <h2> Editar producto : <%= product.name %></h2>
            <form action="/products/edit/<%= product.id %>?_method=PUT" method="post">
                <div>
                    <label>
                        <span>Nombre del producto</span>
                        <input type="text" name="name" autocomplete="off" required value="<%= product.name %>">

                    </label>

                </div>
                <div>
                    <label>
                        <span>Precio del producto</span>
                        <input type="number" name="price" autocomplete="off" required value="<%= product.price %>">

                    </label>

                </div>
                
                <div>

                    <select name="coleccion" id="coleccion">
                        
                            
                             <option value="Heaven" <%= product.colecction === "Heaven" && "selected"%>>Heaven</option>

                             <option value="Hell" <%= product.colecction === "Hell" && "selected"%>>Hell</option>
    
                    </select>
                </div>
                
                <div>
                    <input type="file" name="imagen" id="imagen">
                </div>

                <div>
                    
                    <button class="loginButton" type="submit">Editar</button>
                </div>
                
            </form>
        </section>
        
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>