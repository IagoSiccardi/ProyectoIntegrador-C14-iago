<!DOCTYPE html>
<html lang="en" class="formulariosHTML">
    <%- include('../partials/head',{
        title: 'Sunset | Register'
    }) %> 
<body>
    <%- include('../partials/header') %> 
    <main class="formularios">

        <section>
            <h2>Bienvenid@!</h2>
            <form method="post">
                <div>
                    <label>
                        <span>Nombre y apellido</span>
                        <input type="text" name="nombreApellido" autocomplete="off" value="<%= locals.old && old.nombreApellido ? old.nombreApellido : null %>" %> >
                    </label>
                    <% if (locals.errores && errores.nombreApellido) { %>
                        <p class="errorForm"> <%=errores.nombreApellido.msg%> </p>

                    <% } %>
                </div>
                <div>
                    <label>
                        <span>Email</span>
                        <input type="text" name="email" autocomplete="off" value="<%= locals.old && old.email ? old.email : null %>" >
                    </label>
                    <% if (locals.errores && errores.email) { %>
                        <p class="errorForm"> <%= errores.email.msg  %> </p>
                     
                    <% } %>

                    

                </div>
                <div>
                    <label>
                        <span>Contraseña</span>
                        <input type="password" name="password" autocomplete="off">
                    </label>
                    <% if (locals.errores && errores.password) { %>
                        <p class="errorForm"> <%= errores.password.msg %> </p>
                     
                    <% } %>
                </div>

                <div>
                    <label>
                        <span>Repita su contraseña</span>
                        <input type="password" name="passwordRepeat" autocomplete="off" >
                    </label>
                    <% if (locals.errores && errores.passwordRepeat) { %>
                        <p class="errorForm"> <%= errores.passwordRepeat.msg  %> </p>
                     
                    <% } %>
                </div>

                <div>

                    <p class="terminosP">Acepto los terminos y condiciones<input type="checkbox" name="terminos" id="" ></p>
                    
                    <% if (locals.errores && errores.terminos) { %>
                        <p class="errorForm"> <%=errores.terminos.msg %> </p>
                     
                    <% } %>

                </div>

                <div>
                
                    <button class="registerButton" type="submit">Crear cuenta</button>
                    
                </div>
            

            </form>
        </section>
        
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>